&control
   calculation = 'scf'		!perform self-consistent calculation
   prefix='diamond',
   ! this is a comment: you can comment out variables
   pseudo_dir = './pseudo/',	!directory where pseudopotentials are found
   outdir='./output/'		!directory to store (temporary) output
   ! set pseudo_dir and outdir to suitable directories

/
&system    
   ibrav=  2,		!FCC laticce 
   celldm(1) =6.75, 	!lattice constant (in Bohr radii)
   nat=  2, 		!unit cell contains 2 atoms
   ntyp= 1,		!only one type of atoms is simulated (carbon)
   ecutwfc = 78.0,	!energy cut-off for the plane waves (in Ry)
   nbnd = 6 		!number of bands (Kohn-Sham states) used in the calculation
/
&electrons
/
ATOMIC_SPECIES
 C 12.0107 C.upf	!atomic species, mass, and pseudopotential
ATOMIC_POSITIONS alat	!diamond: two atoms at (0,0,0) and (0.25,0.25,0.25)
 C 0.00 0.00 0.00 
 C 0.25 0.25 0.25 
K_POINTS automatic	!automatically generated k-point grid
   8 8 8 0 0 0 